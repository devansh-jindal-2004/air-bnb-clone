<% layout("layout/boilerplate.ejs") -%>


<div class="row mt-3">
    <h1 class="col-8 offset-2">Create your account</h1>
    <div class="col-8 offset-2 mt-4">
        <form action="/signup" method="POST" class="needs-validation mb-3" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" placeholder="username" id="username" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" placeholder="abcd@gmail.com" id="email" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" placeholder="password" id="password" class="form-control" required>
            </div>
            <button class="btn btn-success col-2 offset-5 mt-3">SignUp</button>
            <p class="col-6 offset-5 mt-3 mb-3"><a href="/login">Already a User ?</a></p>
        </form>
    </div>
</div>
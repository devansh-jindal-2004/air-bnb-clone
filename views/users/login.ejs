<% layout("layout/boilerplate.ejs") -%>

<div class="row mt-3">
    <h1 class="col-8 offset-2">Login to wonderlust</h1>
    <div class="col-8 offset-2 mt-4">
        <form action="/login" method="POST" class="needs-validation mb-3" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" placeholder="username" id="username" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" placeholder="password" id="password" class="form-control" required>
            </div>
            <button class="btn btn-success col-2 offset-5 mt-3">Login</button>
            <p class="offset-5 mt-3 mb-3"><a href="/signup">New to wonderlust ?</a></p>
        </form>
    </div>
</div>